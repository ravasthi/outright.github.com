---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Outright Engineering</title>
  <link rel="alternate" type="text/html" href="http://engineering.outright.com/" />
  <link rel="self" type="application/atom+xml" href="http://engineering.outright.com/atom.xml" />
  <id>http://engineering.outright.com/atom.xml</id>
  <updated>{{ site.time | date_to_utc | date:"%Y-%m-%dT%H:%M:%SZ" }}</updated>
  <subtitle>a blog about startups and code</subtitle>

  {% for post in site.posts limit:15 %}
  
  <entry>
    <title>{{ post.title }}</title>
    <link rel='alternate' type='text/html' href='{{ post.url }}' />
    <id>tag:engineering.outright.com:{{ post.id }}</id>
    <updated>{{ post.date | date.getutc:"%Y-%m-%dT%H:%M:00Z" }}</updated>

    <author>
      <name>Ben Curren</name>
      <uri>http://engineering.outright.com</uri>
      <email>ben@outright.com</email>
    </author>

    <summary>{{ post.content | html_truncatewords:50 }}</summary>
    <content type='html' xml:lang='en' xml:base='http://engineering.outright.com/'>
      <![CDATA[{{ post.content }}{{ post.extended }}]]>
    </content>
  </entry>
  {% endfor %}
</feed>
